	<build>
		<plugins>
			<!-- This plug-in "enhances" your domain model objects (i.e. makes them persistent for datanucleus) -->

			<plugin>
				<groupId>org.datanucleus</groupId>
				<artifactId>maven-datanucleus-plugin</artifactId>
				<version>3.2.0-m1</version>
				<configuration>
					<fork>false</fork>
					<mappingIncludes>com/zimmem/gae/wiki/model/*.class</mappingIncludes>
					<verbose>true</verbose>
					<enhancerName>ASM</enhancerName>
					<api>JPA</api>
				</configuration>
				<executions>
					<execution>
						<phase>process-classes</phase>
						<goals>
							<goal>enhance</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>org.datanucleus</groupId>
						<artifactId>datanucleus-enhancer</artifactId>
						<version>3.1.1</version>
					</dependency>
					<dependency>
						<groupId>javax.jdo</groupId>
						<artifactId>jdo-api</artifactId>
						<version>3.0.1</version>
					</dependency>
					<dependency>
						<groupId>org.datanucleus</groupId>
						<artifactId>datanucleus-core</artifactId>
						<version>3.1.3</version>
					</dependency>
				</dependencies>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<webResources>
						<resource>
							<directory>src/main/webapp</directory>
							<filtering>true</filtering>
							<includes>
								<include>**/appengine-web.xml</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>

			<plugin>
				<groupId>com.google.appengine</groupId>
				<artifactId>appengine-maven-plugin</artifactId>
				<version>${gae.version}</version>
				<configuration>
					<address>0.0.0.0</address>
				</configuration>
			</plugin>

			<!-- Upload application to the appspot automatically, during release:perform -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<goals>appengine:update</goals>
					<!-- <goals>test</goals> -->
				</configuration>
			</plugin>

			<!-- Java compiler version -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>external.atlassian.jgitflow</groupId>
				<artifactId>jgitflow-maven-plugin</artifactId>
				<version>1.0-m5.1</version>
				<configuration>
					<pushFeatures>false</pushFeatures>
					<pushHotfixes>false</pushHotfixes>
					<pushReleases>false</pushReleases>
					<allowUntracked>true</allowUntracked>
					<noFeatureBuild>true</noFeatureBuild>
					<noReleaseBuild>true</noReleaseBuild>
					<flowInitContext>
						<versionTagPrefix>version-</versionTagPrefix>
					</flowInitContext>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>release-finish</goal>
						</goals>
						<configuration>
							<useReleaseProfile>true</useReleaseProfile>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>src/main/webapp/WEB-INF</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.xml</include>
				</includes>
			</resource>
			<resource>
				<directory>src/main/webapp/WEB-INF</directory>
				<filtering>false</filtering>
				<excludes>
					<exclude>**/*.xml</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
			</resource>
		</resources>

		<filters>
			<filter>${mirco.wiki.filter}</filter>
		</filters>
	</build>

	<!-- Specify hard-coded project properties here -->
	<properties>
		<!-- This is just for "eclipse:eclipse" goal to always attempt downloading sources -->
		<downloadSources>true</downloadSources>

		<!-- Specify AppEngine version for your project. It should match SDK version pointed to by ${gae.home} property (Typically, one used by your Eclipse plug-in) -->
		<spring.version>4.3.3.RELEASE</spring.version>
		<gae.version>1.9.42</gae.version>
		<!-- Upload to http://test.latest.<applicationName>.appspot.com by default -->
		<gae.application.version>${maven.build.timestamp}</gae.application.version>
		<gae.home>
			${settings.localRepository}/com/google/appengine/appengine-java-sdk/${gae.version}/appengine-java-sdk
		</gae.home>
		<datanucleus.version>1.1.5</datanucleus.version>

		<!-- do not user https when upload to gae -->
		<insecure>true</insecure>
	</properties>

	<profiles>


		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<mirco.wiki.filter>${user.home}/mirco-wiki/dev.properties</mirco.wiki.filter>
				<maven.test.skip>true</maven.test.skip>
			</properties>
			<build>
				<resources>
					<resource>
						<directory>src/main/stackedit/public</directory>
						<filtering>false</filtering>
						<targetPath>${basedir}/target/${project.build.finalName}</targetPath>
					</resource>
				</resources>
			</build>
		</profile>



		<profile>
			<id>light-dev</id>
			<properties>
				<mirco.wiki.filter>filters/dev.properties</mirco.wiki.filter>
				<maven.test.skip>true</maven.test.skip>
			</properties>

			<build>
				<resources>
					<resource>
						<directory>src/main/stackedit/public</directory>
						<filtering>false</filtering>
						<targetPath>${basedir}/target/${project.build.finalName}</targetPath>
						<includes>
							<include>res-min/**</include>
							<include>index.html</include>
						</includes>
						<excludes>
							<exclude>res/**</exclude>
						</excludes>
					</resource>
				</resources>
			</build>

		</profile>

		<!-- This profile will activate automatically during release and upload application to the http://2.latest.<applicationName>.appspot.com (We might want to set the 2nd version as our applications Default version to be accessible at http://<applicationName>.appspot.com) -->
		<profile>
			<id>release-build</id>
			<activation>
				<property>
					<name>performRelease</name>
					<value>true</value>
				</property>
			</activation>

			<properties>
				<mirco.wiki.filter>filters/release.properties</mirco.wiki.filter>
			</properties>

			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-war-plugin</artifactId>
						<version>2.4</version>
						<configuration>
							<webResources>
								<resource>
									<directory>${basedir}/src/main/webapp/WEB-INF</directory>
									<filtering>true</filtering>
									<targetPath>WEB-INF</targetPath>
								</resource>
								<resource>
									<directory>${basedir}/src/main/stackedit/public</directory>
									<filtering>false</filtering>
									<targetPath>/</targetPath>
									<includes>
										<include>res-min/**</include>
										<include>index.html</include>
									</includes>
									<excludes>
										<exclude>res/**</exclude>
									</excludes>
								</resource>
							</webResources>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

	</profiles>


